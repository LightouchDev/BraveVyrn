{
  "name": "bravevyrn",
  "productName": "BraveVyrn",
  "version": "0.2.1",
  "author": "Miau Lightouch <miaulightouch@gmail.com>",
  "repository": "https://github.com/LightouchDev/BraveVyrn",
  "description": "BraveVyrn is a clean dedicated GBF loader.",
  "license": "MIT",
  "main": "./dist/muon/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "node .electron-vue/build.js --clean",
    "dev": "node .electron-vue/dev-runner.js",
    "e2e": "npm run pack && mocha test/e2e",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "pack": "node .electron-vue/build.js",
    "test": "npm run unit && npm run e2e",
    "unit": "karma start test/unit/karma.conf.js",
    "postinstall": "npm run lint:fix"
  },
  "build": {
    "productName": "BraveVyrn",
    "appId": "org.LightouchDev.BraveVyrn",
    "muonVersion": "5.1.3",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/muon/**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.games",
      "target": "zip"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-${os}-setup.${ext}"
    },
    "win": {
      "artifactName": "${productName}-${version}-${os}-portable.${ext}",
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "category": "Game",
      "icon": "build/icons",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-regular": "^5.0.8",
    "@fortawesome/vue-fontawesome": "^0.0.22",
    "debug": "^3.1.0",
    "get-port": "^3.2.0",
    "lodash": "^4.17.5",
    "os-locale": "^2.1.0",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "url-parser": "https://github.com/LightouchDev/url-parser",
    "vue": "^2.5.13",
    "vue-i18n": "^7.4.2",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.3.2",
    "copy-webpack-plugin": "^4.5.0",
    "css-loader": "^0.28.10",
    "del": "^3.0.0",
    "electron": "LightouchDev/electron",
    "electron-builder": "^20.3.1",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.3.0",
    "html-webpack-plugin": "^3.0.6",
    "node-loader": "^0.6.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.1",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "vue-loader": "^14.1.1",
    "vue-style-loader": "^4.0.2",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^4.1.0"
  }
}
